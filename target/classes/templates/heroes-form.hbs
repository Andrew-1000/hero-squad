{{#partial "content"}}

        <h2>Add New Hero</h2>
        <div class="col-md-12">
            <div class="col-md-6">
                <form action="/heroes/new" method="post" >

                    <div class="form-group">
                        <label for="name" >Name:</label>
                        <input id="name" class="form-control" name="name" type="text"><br>
                    </div>

                    <div class="form-group">
                        <label for="age" >Age:</label>
                        <input id="age" name="age" type="number" class="form-control" min="5"><br>
                    </div>

                    <div class="form-group">
                        <label for="specialpowers">Special Powers</label>
                        <input id="specialpower" name="specialpower" class="form-control"type="text"><br>
                    </div>

                    <div class="form-group">
                        <label for="weakness" >Weakness</label>
                        <input id="weakness" name="weakness" class="form-control" type="text"><br>
                    </div>

                    <button type="submit" class="btn btn-default">Add Hero</button>

                </form>
            </div>

        </div>


{{/partial}}
{{> layout.hbs}}